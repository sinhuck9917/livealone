<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.livealone4.Activities.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_buttonw_in_activity_sign_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@drawable/back_button_image1" />

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="회원가입"
            android:textAlignment="center"
            android:textSize="23sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/profile_image_view_in_activity_sign_up"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/profile_image_view_in_activity_live_alone_image" />
    <Button
        android:id="@+id/picture_pick_button"
        android:background="@android:color/transparent"
        android:text="사진 등록"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="22dp" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:text="이메일"
            android:textSize="16sp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="16sp"
            android:layout_weight="1"
            android:id="@+id/email_text_view_in_activity_sign_up"
            android:maxLength="30"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:text="패스워드"
            android:textSize="16sp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="16sp"
            android:layout_weight="1"
            android:id="@+id/password_text_view_in_activity_sign_up"
            android:maxLength="30"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:text="이름"
            android:textSize="16sp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="16sp"
            android:layout_weight="1"
            android:id="@+id/name_text_view_in_activity_sign_up"
            android:maxLength="10"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="연락처"
            android:textSize="16sp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="16sp"
            android:layout_weight="1"
            android:id="@+id/phone_text_view_in_activity_sign_up"
            android:maxLength="20"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:text="생년월일"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/birthday_text_view_in_activity_sign_up"
                android:text="2017-11-09"
                android:textSize="16sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/date_pick_button_in_sign_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/date_pick_button_image1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:text="지역 "
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"/>
        <Spinner
            android:layout_weight="1"
            android:entries="@array/locations"
            android:id="@+id/location_spinner_in_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/submit_button_in_sign_up"
        android:background="@android:color/transparent"
        android:textSize="17sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="등록하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>