<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.livealone4.Activities.DataGeneratorActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <EditText
        android:hint="평점 (소수점 가능)"
        android:id="@+id/star_edt"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:hint="같이먹기 횟수"
        android:id="@+id/count_edt"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="중단 횟수"
        android:id="@+id/sus_edt"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:hint="유저타입 (0 : 정상 1 : 비정상)"
        android:id="@+id/type_edt"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submt_btn"
        android:text="등록"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/existing_usr_btn"
        android:text="기존 유저 데이터넷 생성"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/clr_btn"
        android:text="초기화"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
