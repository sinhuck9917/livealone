<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/back_button_in_activity_live_alone"
            android:background="@drawable/back_button_image1"
            android:layout_width="60dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/edit_button_in_activity_live_alone"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:text="수정"
            android:textSize="15dp"
            android:layout_width="60dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/delete_button_in_activity_live_alone"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:text="삭제"
            android:textSize="15dp"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:transitionName="card_view_transition"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_text_view_in_activity_live_alone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="타이틀"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upload_date_text_view_in_activity_live_alone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-05-17"
                android:textAlignment="center"
                android:textSize="12dp" />

            <ImageView
                android:layout_margin="10dp"
                android:transitionName="profile_image_transition"
                android:id="@+id/profile_image_view_in_activity_live_alone"
                android:layout_gravity="center"
                android:src="@drawable/profile_image_view_in_activity_live_alone_image"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/name_text_view_in_activity_live_alone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/star_text_view_in_activity_live_alone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="★ 4.5"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="10dp"
                android:background="#222222"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="장소"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/live_alone_location_text_view_in_activity_live_alone"
                    android:textAlignment="center"
                    android:text="서울"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="기간"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/live_alone_period_text_view_in_activity_live_alone"
                    android:textAlignment="center"
                    android:text="yyyy-mm-dd ~ mm-dd"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textAlignment="center"
                    android:text="음식 종류"
                    android:layout_weight="3"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/live_alone_alone_type_text_view_in_activity_live_alone"
                    android:text="타입"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/comment_text_view_in_activity_live_alone"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="상세 내용 ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:maxLines="4"/>

            <Button
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/contact_button_in_activity_live_alone"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>